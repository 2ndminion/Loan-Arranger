<h1>Editing loan</h1>

<% form_for(@loan) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :lender_id %><br />
    <%= f.text_field :lender_id %>
  </p>
  <p>
    <%= f.label :borrower_id %><br />
    <%= f.text_field :borrower_id %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :interest_rate %><br />
    <%= f.text_field :interest_rate %>
  </p>
  <p>
    <%= f.label :settlement_date %><br />
    <%= f.datetime_select :settlement_date %>
  </p>
  <p>
    <%= f.label :locked %><br />
    <%= f.check_box :locked %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

